package serializableTest;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;

public class SerializableDemo1 {
	public static void main(String[] args) throws FileNotFoundException, IOException, ClassNotFoundException {
		Person p = new Person("Larry Song", "male", 35);
		ObjectOutputStream oos = null;
		try {
			oos = new ObjectOutputStream(new FileOutputStream("/home/larryso/larryso/java/temp/larryso.temp"));
			oos.writeObject(p);
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			if (oos != null)
				oos.close();
		}
		File file = new File("/home/larryso/larryso/java/temp/larryso.temp");
		ObjectInputStream ois = new ObjectInputStream(new FileInputStream(file));
		Person p2 = (Person) ois.readObject();
		p2.setAge(34);
		System.out.println(p2.getUserName()+";"+p2.getSex()+";"+p2.getAge());
	}

}
