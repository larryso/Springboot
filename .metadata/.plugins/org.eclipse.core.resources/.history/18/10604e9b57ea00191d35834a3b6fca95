<script type="text/javascript">  
$(document).ready(function () {  
  $('.tabs span').mouseover(function () {  
    $('.tabs div').hide();
    $(this).siblings('span')
           .removeClass('active')
           .end()
           .addClass('active')
           .next('div')
           .show();
  });  
});  
</script>
